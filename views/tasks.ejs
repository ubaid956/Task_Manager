<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Tasks</title>
  <link rel="stylesheet" href="/stylesheets/style.css"/>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white min-h-screen p-6">
  <nav class="mb-8">
    <a class="text-blue-400 hover:underline" href="/">âž• Create Task</a>
  </nav>

  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <% tasks.forEach(function(task) { %>
      <div class="bg-zinc-800 rounded-xl p-6 shadow-md hover:shadow-lg transition-all">
        <h2 class="text-2xl font-semibold mb-3"><%= task.title %></h2>
        <p class="text-zinc-300 mb-4 leading-relaxed"><%- task.description.replace(/\n/g, '<br>') %></p>
        <div class="flex justify-end gap-4 border-t border-zinc-700 pt-4">
          <a class="text-blue-400 hover:underline" href="/edit/<%= task._id %>">Edit</a>
          <a class="text-red-500 hover:underline" href="/delete/<%= task._id %>">Delete</a>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>
